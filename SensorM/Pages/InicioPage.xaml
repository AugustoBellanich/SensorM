<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SensorM.Pages.InicioPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Barra Superior -->
        <Grid Grid.Row="0" Padding="10">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Bot贸n de Navegaci贸n Lateral -->
            <Button Text="Menu" Grid.Column="0" Command="{Binding NavCommand}"/>

            <!-- Logo del Centro -->
            <Image Grid.Column="1" Source="logo_sensor.png" Aspect="AspectFit" HeightRequest="50" Margin="10"/>

            <!-- Bot贸n de conexi贸n bluetooth -->
            <Button Text="Bluetooth" Grid.Column="2" Command="{Binding BluetoothCommand}"/>
            
        </Grid>

    </Grid>
    
</ContentPage>
